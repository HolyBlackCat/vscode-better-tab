{
    "extends": "tslint:recommended",
    "defaultSeverity": "warn",
    "jsRules": {
        "whitespace": [true, "check-branch"],
        "quotemark": [true, "single", "avoid-escape", "avoid-template"],
        "indent": [true, "spaces", 4],
        "semicolon": [true, "always"],
        "curly": [true, "ignore-same-line"],
        "no-console": false,
        "max-line-length": false
    },
    "rules": {
        "no-any": false,
        "ban-comma-operator": true,
        "use-default-type-parameter": true,
        "object-literal-sort-keys": false,
        "no-console": false,
        "interface-name": false,
        "no-empty": false,
        "eofline": false,
        "object-literal-shorthand": false,
        "no-trailing-whitespace": false,
        "interface-over-type-literal": false,
        "max-line-length": false,
        "prefer-function-over-method": false,
        "no-parameter-properties": false,
        "no-submodule-imports": false,
        "no-empty-interface": false,
        "no-non-null-assertion": false,
        "forin": false,
        "prefer-const": false,
        "import-blacklist": false,

        "quotemark": [true, "single", "avoid-escape", "avoid-template"],
        "semicolon": [true, "always"],
        "arrow-parens": false,
        "trailing-comma": [
            false,
            {
                "multiline": "always",
                "singleline": "never"
            }
        ],
        "ban-types": true,
        "member-access": true,
        "whitespace": [true, "check-branch", "check-type-operator", "check-operator", "check-module", "check-preblock", "check-typecast", "check-rest-spread", "check-decl"],
        "no-consecutive-blank-lines": true,
        "no-angle-bracket-type-assertion": true,
        "no-var-keyword": true,
        "no-shadowed-variable": true,
        "no-var-requires": true,
        "no-unused-expression": [true, "allow-new"],
        "member-ordering": true,
        "curly": [true, "ignore-same-line"],
        "ordered-imports": true,
        "no-eval": true,
        "no-null-keyword": false,
        "triple-equals": [true, "allow-undefined-check"],
        "typeof-compare": true,
        "no-bitwise": true,
        "no-construct": true,
        "comment-format": [true, "check-space"],
        "typedef-whitespace": true,
        "typedef": true,
        "indent": [true, "spaces", 4],
        "no-duplicate-imports": true,
        "array-type": [true, "generic"],
        "space-before-function-paren": [true, "never"],
        "no-irregular-whitespace": true,
        "prefer-template": true,
        "no-duplicate-variable": true,
        "no-debugger": true,
        "label-position": true,
        "no-parameter-reassignment": true,
        "no-reference": true,
        "deprecation": true,
        "linebreak-style": [true, "LF"],
        "class-name": true,
        "encoding": true,
        "adjacent-overload-signatures": true,
        "await-promise": true,
        "no-conditional-assignment": true,
        "no-duplicate-super": true,
        "no-string-literal": true,
        "no-sparse-arrays": true,
        "no-string-throw": true,
        "no-use-before-declare": true,
        "use-isnan": true,
        "cyclomatic-complexity": [false, 20],
        "max-classes-per-file": [true, 1],
        "jsdoc-format": true,
        "newline-before-return": true,
        "new-parens": true,
        "no-boolean-literal-compare": true,
        "no-reference-import": true,
        "no-unnecessary-callback-wrapper": true,
        "no-unnecessary-initializer": true,
        "no-unnecessary-qualifier": true,
        "number-literal-format": true,
        "object-literal-key-quotes": [true, "as-needed"],
        "one-line": [true, "check-catch", "check-finally", "check-else", "check-open-brace", "check-whitespace"],
        "one-variable-per-declaration": [true, "ignore-for-loop"],
        "variable-name": [true, "ban-keywords", "check-format"],
        "space-within-parens": [true, 0],
        "no-inferrable-types": true,
        "no-magic-numbers": [false, -1, 0, 1, 2, 3],
        "no-internal-module": true,
        "no-namespace": true,
        "no-unnecessary-type-assertion": true,
        "only-arrow-functions": [true, "allow-declarations", "allow-named-functions"],
        "prefer-for-of": true,
        "type-literal-delimiter": true,
        "switch-final-break": [true, "always"],
        "radix": true,
        "prefer-method-signature": true,
        "unified-signatures": true,
        "no-floating-promises": true,
        "no-for-in-array": true,
        "no-inferred-empty-object-type": true,
        "no-invalid-template-strings": true,
        "no-misused-new": true,
        "no-object-literal-type-assertion": true,
        "no-switch-case-fall-through": true,
        "no-this-assignment": true,
        "no-unbound-method": [true, "ignore-static"],
        "no-unsafe-any": true,
        "no-unused-variable": true,
        "no-unsafe-finally": true,
        "no-void-expression": true,
        "restrict-plus-operands": true,
        "strict-boolean-expressions": true,
        "binary-expression-operand-order": true,
        "arrow-return-shorthand": true,
        "no-require-imports": true,
        "switch-default": true,
        "strict-type-predicates": true
    }
}
